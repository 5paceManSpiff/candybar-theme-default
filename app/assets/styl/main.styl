global-reset()
reset-html5()

// theme settings
font-main = sans-serif
font-icons = wkline-icons
font-size = 14px
height = 27px
color-background = #111
color-foreground = #fff
background-opacity = .6
background-gradient-amount = 10
border-opacity = .1
padding-width = 10px
desktop-margin = 2px

color-red = #d32
color-yellow = #e92
color-green = #7a3

// animations
@keyframes urgent-pulse
	0%
		background: darken(color-red, 20)
		text-shadow: 0 0 10px color-red, 0 0 5px color-red, 0 0 5px color-red, 0 0 2px color-foreground
	40%
		background: darken(color-red, 30)
		text-shadow: none
	80%, 100%
		background: darken(color-red, 20)
		text-shadow: 0 0 10px color-red, 0 0 5px color-red, 0 0 5px color-red, 0 0 2px color-foreground

wb-rotation = 30deg
@keyframes wiggle-bubble
	0%
		transform: scale(1)
	2%
		transform: scale(1.1) rotate(wb-rotation)
	4%
		transform: scale(1.2) rotate(-(wb-rotation))
	6%
		transform: scale(1.3) rotate(wb-rotation)
	8%
		transform: scale(1.3) rotate(-(wb-rotation))
	10%
		transform: scale(1.2) rotate(wb-rotation)
	12%
		transform: scale(1.1) rotate(-(wb-rotation))

	14%, 100%
		transform: scale(1) rotate(0)

// core design
@font-face
	src: url('../font/wkline-icons.svg') format('svg')
	font-family: font-icons
	font-style: normal
	font-weight: normal

html, body
	background: #000
	cursor: default
	font-weight: bold
	font: font-size/height font-main
	line-height: height - 2px
	overflow: hidden
	user-select: none

#statusline-bg
	background: color-background linear-gradient(top,
		rgba(lighten(color-background, background-gradient-amount), background-opacity) 0,
		rgba(darken(color-background, background-gradient-amount), background-opacity) 60%,
		rgba(color-background, background-opacity) 100%)
	border-radius: (padding-width / 2) (padding-width / 2) 0 0
	box-sizing: border-box
	height: height

#statusline
	-webkit-transform: translate3d(0, 0, 0)
	border-bottom: 1px solid rgba(#000, border-opacity + .5)
	border-top: 1px solid rgba(#fff, border-opacity)
	border-radius: (padding-width / 2) (padding-width / 2) 0 0
	box-sizing: border-box
	color: color-foreground
	display: flex
	flex-flow: row nowrap
	height: height
	position: relative
	overflow: hidden
	.widget
		border-left: 1px solid rgba(#fff, border-opacity)
		border-right: 1px solid rgba(#000, border-opacity + .5)
		box-sizing: border-box
		display: none
		flex: 0 0 auto
		text-overflow: ellipsis
		&:first-child
			border-left: none
		&:last-child
			border-right: none
		.contents
			margin: 0 padding-width
			overflow: hidden
			white-space: nowrap
			*
				display: inline-block
		&.size-flex
			flex: 0 1 auto
		&.size-fill
			// this needs to be visible for the flexbox to work
			display: inline-block !important
			flex: 1 1 auto
		&.size-flex, &.size-fill
			.contents
				// fade end of text
				-webkit-mask-image: -webkit-linear-gradient(left, rgba(#000, 1), rgba(#000, 1) 90%, rgba(#000, 0) 100%)

// common widget elements
.icon::before
	background: linear-gradient(top, rgba(#fff, .7), rgba(#fff, .5))
	display: inline-block
	font-family: font-icons
	font-size: font-size + 2px
	text-align: center
	width: font-size + 4px
	-webkit-background-clip: text
	-webkit-text-fill-color: transparent

.progress
	progress-height = 4px
	progress-width = 100px

	background: linear-gradient(top, rgba(#fff, .15), rgba(#fff, .3))
	border-radius: (progress-height / 2)
	box-shadow: 0 -1px 0 #000, 0 1px 0 rgba(#fff, .4)
	height: progress-height
	position: relative
	top: (height / 2) - (progress-height / 2)
	vertical-align: top
	width: progress-width
	.bar
		background: linear-gradient(top, rgba(#fff, .7), rgba(#fff, .3))
		border-radius: @border-radius
		height: progress-height
		position: absolute

.popup
	.popup-contents
		max-width: 0
		overflow: hidden
		transition: all .3s linear
	&:hover .popup-contents,
	.popup-contents:hover
		max-width: 600px

// widgets
.widget
	*
		vertical-align: top

	&#widget_battery
		.icon
			font-size: font-size + 7px
			margin-top: -1px
		.percentage
			margin: 0 0 0 (padding-width / 2)
		&.percentage-high .icon::before
			content: '\e803'
		&.percentage-medium .icon::before
			content: '\e802'
		&.percentage-low .icon::before
			content: '\e801'
		&.percentage-critical
			animation: urgent-pulse 2s ease infinite
			font-weight: bold
			.icon::before
				content: '\e800'
		&.state-charging, &.state-discharging
			.time_left
				opacity: .8
				margin: 0 0 0 (padding-width / 2)
				&:after
					content: ' left'
		&.state-charging
			animation: none
			.icon::before
				content: '\e804'
		&.state-full .icon::before
			background-color: color-green

	&#widget_datetime
		.icon::before
			content: '\e809'
		.date
			margin: 0 padding-width 0 (padding-width / 2)
			color: rgba(#fff, .8)
		.time
			font-weight: bold

	&#widget_desktops
		.contents
			margin: 0
			padding: 0
		li
			cursor: pointer
			padding: 0 padding-width
			position: relative
			text-align: center
			&:first-child
				border-top-left-radius: (padding-width / 2) - 2px
			&.urgent
				animation: urgent-pulse 1.5s linear infinite
				font-weight: bold
			&.has-windows
				&::after
					background: linear-gradient(45deg, transparent, transparent 50%, rgba(#fff, .3) 50%)
					border-top-right-radius: 1px
					content: ''
					height: 5px
					position: absolute
					right: 2px
					top: 2px
					width: 5px
			&.selected
				background: linear-gradient(top, rgba(color-foreground, .9), rgba(color-foreground, .7))
				color: color-background
				font-weight: bold
				text-shadow: 0 1px 0 rgba(#fff, .8)
				box-shadow: 0 -1px 2px #000
				&.has-windows
					&::after
						background: linear-gradient(45deg, transparent, transparent 50%, rgba(#000, .5) 50%)

	&#widget_email_imap
		color-unread = lighten(color-red, 20)
		.icon::before
			content: '\e815'
		.has-unread
			.icon::before
				animation: wiggle-bubble 7s linear infinite
				background: color-unread
				-webkit-background-clip: text
			.unread
				margin: 0 0 0 (padding-width / 2)
				color: color-unread
				font-weight: bold

	&#widget_external_ip
		.icon::before
			content: '\e80a'
		.ip
			-webkit-user-select: text
			cursor: auto
			margin: 0 0 0 (padding-width / 2)

	&#widget_now_playing
		.icon::before
			content: '\e810'
		.status-icon
			&::before
				content: '\e80d'
			&.playing::before
				content: '\e80b'
		.time
			.elapsed_time
				margin: 0 0 0 10px
			.total_time
				font-size: 10px
				margin: 0 0 0 (padding-width / 2)
				opacity: .8
				vertical-align: middle
				&:before
					content: ' / '
		.progress
			margin: 0 padding-width
		.song
			overflow: hidden
			text-overflow: clip
			.artist
				display: inline-block
				margin: 0 0 0 padding-width
				opacity: .8
				&::after
					content: 'â€º'
					margin: 0 padding-width
					opacity: .6
			.title
				display: inline-block

	&#widget_volume
		.progress
			margin: 0 0 0 (padding-width / 2)
		.icon
			&.high::before
				content: '\e807'
			&.medium::before
				content: '\e806'
			&.low::before
				content: '\e805'
			&.off::before
				color-mute = lighten(color-red, 20)
				background: color-mute
				content: '\e805'
				-webkit-background-clip: text

	&#widget_weather
		.icon
			img
				display: inline-block
				height: height - (desktop-margin * 2)
				position: relative
				top: desktop-margin
				vertical-align: top
		.temp
			margin: 0 0 0 (padding-width / 2)
			&.c::after
				content: '\00b0 C'
			&.f::after
				content: '\00b0 F'
			&.k::after
				content: 'K'
