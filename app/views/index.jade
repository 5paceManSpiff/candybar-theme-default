doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html;charset=utf-8')

		title wkline

		link(rel='stylesheet', href='static/css/main.css', type='text/css')

	body
		#statusline-bg
		#statusline
			#left
				ul.widget.hide#desktops

				.widget.hide#layout

				.widget.hide#window_title

			#right
				.widget.hide.popup#now_playing
					span.icon
					.time.popup-contents
						span.elapsed_time
						span.total_time
					.progress
						.bar.elapsed_percent
					span.icon.status-icon
					.song.popup-contents
						span.artist
						span.title

				.widget.hide#volume
					span.icon
					.progress
						.bar.volume_percent

				.widget.hide#weather
					img.icon
					span.temp

				.widget.hide.popup#external_ip
					span.icon
					span.popup-contents
						span.ip

				.widget.hide.popup#battery
					span.icon
					span.percentage
					span.popup-contents
						span.time_left

				.widget.hide#datetime
					span.icon
					span.date
					span.time

	script(src='static/js/main.js')
