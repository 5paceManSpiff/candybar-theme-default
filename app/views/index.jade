doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='Content-Type', content='text/html;charset=utf-8')

		title wkline

		link(rel='stylesheet', href='static/css/main.css', type='text/css')

	body
		#statusline-bg
		#statusline
			#left
				ul.widget.hide#desktops

				.widget.hide#layout
					.name

				.widget.hide#window
					.name

			#right
				.widget.hide.popup#external_ip
					span.icon.widget-icon
					span.popup-contents
						span.ip

				.widget.hide#now_playing
					span.icon.widget-icon
					.time
						span.elapsed_time
						span.total_time
					.progress
						.bar.elapsed_percent
					span.icon.status-icon
					.song
						span.artist
						span.title

				.widget.hide#volume
					span.icon.widget-icon
					.progress
						.bar.volume_percent

				.widget.hide#weather
					img.icon
					span.temp

				.widget#notifications
					span.icon.pending 1
					.notification
						.contents
							span.icon
							span.summary Test message
							span.body Test body
							span.close

				.widget.hide#datetime
					span.icon.widget-icon
					span.date
					span.time

	script(src='static/js/main.js')
